<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">
    <info>
        <appname>MR^3</appname>
        <appversion>1.0 RC2</appversion>
        <authors>
	        <author name="Takeshi Morita" email="t_morita@ae.keio.ac.jp"/>
        </authors>
        <url>http://mmm.semanticweb.org/mr3/</url>
	<javaversion>1.5.0</javaversion>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="no"/>
    
    <!--  The locale section. -->
    <locale>
        <langpack iso3="cat"/>
        <langpack iso3="dan"/>
        <langpack iso3="deu"/>
	<langpack iso3="eng"/>
	<langpack iso3="fin"/>
	<langpack iso3="fra"/>
	<langpack iso3="hun"/>
	<langpack iso3="ita"/>
	<langpack iso3="jpn"/>
	<langpack iso3="ned"/>
	<langpack iso3="pol"/>
	<langpack iso3="por"/>
	<langpack iso3="rom"/>
	<langpack iso3="rus"/>
	<langpack iso3="spa"/>
	<langpack iso3="svk"/>
	<langpack iso3="swe"/>
	<langpack iso3="ukr"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="LICENSE2.txt"/>
        <res id="InfoPanel.info" src="README.txt"/>
        <res id="shortcutSpec.xml" src="MyShortcutSpec.xml"/> 
    </resources>
    <native type="izpack" name="ShellLink.dll"/>

    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
	<!-- <panel classname="InfoPanel"/> -->
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
     <!--<panel classname="ShortcutPanel"/> -->
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The base files</description>
            <file src="README.txt" targetdir="$INSTALL_PATH"/>
            <file src="LICENSE1.txt" targetdir="$INSTALL_PATH"/>
            <file src="LICENSE2.txt" targetdir="$INSTALL_PATH"/>
            <file src="TODO.txt" targetdir="$INSTALL_PATH"/>
            <file src="BUGS.txt" targetdir="$INSTALL_PATH"/>
            <file src="ChangeLog.txt" targetdir="$INSTALL_PATH"/>
            <file src="jena.license.txt" targetdir="$INSTALL_PATH"/>
            <file src="jgraph.license.txt" targetdir="$INSTALL_PATH"/>
            <file src="vgj.license.txt" targetdir="$INSTALL_PATH"/>
            <file src="vowlidator.license.txt" targetdir="$INSTALL_PATH"/>
	     	<file src="mr3.jnlp" targetdir="$INSTALL_PATH"/>
            <file src="mr3_development.jnlp" targetdir="$INSTALL_PATH"/>
            <file src="build/mr3.jar" targetdir="$INSTALL_PATH/build"/>
	    <file src="build/lib" targetdir="$INSTALL_PATH/build"/>
	    <file src="run.bat" targetdir="$INSTALL_PATH" os="windows"/>
	    <file src="run.sh" targetdir="$INSTALL_PATH" os="unix"/>
	    <file src="run.sh" targetdir="$INSTALL_PATH" os="mac"/>
	    <file src="src/org/semanticweb/mmm/mr3/resources/mr3_logo.ico"
     	          targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="Docs" required="no">
            <description>Java Doc</description>
            <file src="docs.zip" targetdir="$INSTALL_PATH"/> 
        </pack>
        <pack name="Sources" required="no">
            <description>The sources</description>
            <file src="src.zip" targetdir="$INSTALL_PATH"/>
            <file src="build.xml" targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="Plugin Sample" required="no">
            <description>Sample Plugins</description>
            <file src="plugins/build.xml" targetdir="$INSTALL_PATH/plugins"/>
            <file src="plugins/samplePlugin.jar" targetdir="$INSTALL_PATH/plugins"/>
            <file src="plugins/src.zip" targetdir="$INSTALL_PATH/plugins"/>
        </pack>

    </packs>    
</installation>
